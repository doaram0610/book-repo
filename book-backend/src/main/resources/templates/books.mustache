{{>./header}}

<h3>도서 조회 서비스</h3>

<form>
 <div class="row">
    <div class="col">
    <select
      class="form-control"
      name="search"
      id="search"
    >
          <option value="title">제목</option>
          <option value="author">저자</option>
    </select>
    </div>
    <div class="col">
     <input type="searchval" class="form-control" id="searchval" placeholder="Enter value" name="searchval">
    </div>
  </div>
  <div class="row">
  <div class="col"></div>
  <div class="col">
    <button type="button" class="btn btn-primary" id="btn-submit">
      도서찾기
  </button>
  </div>
  </div>  
</form>

<hr />

<table class="table">
  <thead>
    <tr>
      <th>도서명</th>
      <th>저자</th>
    </tr>
  </thead>
  <tbody id="tbody-books">
    {{#books}}
    <tr>
      <td>{{ title }}</td>
      <td>{{ author }}</td>
    </tr>
    {{/books}}
  </tbody>
</table>

<script src="../js/books.js"></script>

{{>./footer}}
